// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "agent": {
    "always_allow_tool_actions": true,
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-3.7-sonnet"
    },
    "version": "2",
    "button": false,
    "enabled": true
  },
  "notification_panel": {
    "button": false
  },
  "languages": {
    "Markdown": {
      "show_edit_predictions": false
    },
    "C": {
      "show_edit_predictions": false
    },
    "JSONC": {
      "show_edit_predictions": false
    },
    "C++": {
      "show_edit_predictions": true
    },
    "Vue.js": {
      "show_edit_predictions": false
    }
  },
  "terminal": {
    "dock": "bottom",
    "button": false
  },
  "lsp": {
    "clangd": {
      "binary": {
        "path": "/run/current-system/sw/bin/clangd",
        "arguments": []
      }
    },
    "nil": {
      "initialization_options": {
        "formatting": {
          "command": ["nixfmt"]
        }
      }
    }
  },
  "theme": "Tokyo Night",
  "buffer_font_family": "iMWritingMono Nerd Font",
  "ui_font_family": "iMWritingMono Nerd Font",
  "buffer_font_size": 15,
  "vim_mode": true,
  "ui_font_size": 16,
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "cursor_blink": false,
  // use relative line numbers
  "relative_line_numbers": true,
  // hide the scroll bar
  "scrollbar": { "show": "never" },
  // allow cursor to reach edges of screen
  "soft_wrap": "editor_width",
  "scroll_beyond_last_line": "one_page",
  "vertical_scroll_margin": 10,
  "vim": {
    "use_system_clipboard": "always"
  },
  "tab_bar": {
    "show": false
  },
  "format_on_save": "on",
  "buffer_line_height": {
    "custom": 1.3
  },
  "experimental.theme_overrides": {
    "editor.active_line_number": "#ff9e64",
    "editor.active_line.background": "#292e4277",
    "border.variant": "#ff9e64",
    "editor.indent_guide": "#353b56",
    "editor.indent_guide_active": "#0db9d7",
    "element.active": "#9aa5ce11",
    "ghost_element.selected": "#565f8940",
    "editor.background": "#00000000",
    "background.appearance": "opaque",
    "background": "#090A0Fee",
    "editor.gutter.background": "#00000000",
    "tab_bar.background": "#00000000",
    "toolbar.background": "#00000000",
    "status_bar.background": "#090A0Fd7",
    "title_bar.background": "#090A0Fd7",

    "players": [
      {
        "selection": "#283457"
      }
    ],
    "syntax": {
      "variable": {
        // "color": "#8affe6"
        "color": "#65bcb0"
      },
      "punctuation.special": {
        "color": "#ff9e64"
      },
      "property": {
        "color": "#89b4fa"
      }
    }
  },
  "project_panel": {
    "button": false,
    "default_width": 230,
    "auto_fold_dirs": false
  },
  "indent_guides": {
    "enabled": true,
    "active_line_width": 2,
    "line_width": 2
  },
  "show_whitespaces": "none",
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "gutter": {
    "code_actions": false,
    "folds": false,
    "runnables": true
  },
  "outline_panel": {
    "button": false
  },
  "collaboration_panel": {
    "button": false
  },
  "diagnostics": {
    "include_warnings": true,
    "inline": {
      "enabled": true
    }
  },
  "selection_highlight": true,
  "show_completion_documentation": true,
  "show_completions_on_input": true,
  "auto_signature_help": true,
  "show_edit_predictions": false,
  "search": {
    "button": false
  },
  "git_panel": {
    "button": false
  }
}
