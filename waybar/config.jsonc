[
  {
    "clock": {
      "format": "{:%H:%M %d %B}",
      "tooltip-format": "{:%H:%M %d %B %Y}",
      "timezone": "Europe/Warsaw"
    },
    "layer": "top",
    "modules-center": [
      "clock"
    ],
    "modules-left": [
      "custom/nixos",
      "hyprland/workspaces",
      "tray",
      "mpris"
    ],
    "modules-right": [
      "group/usage",
      "group/audio",
      "hyprland/language",
      "network",
      "bluetooth",
      "custom/brightness",
      "battery",
      "custom/powermenu"
    ],
    "position": "top",
    "mpris": {
      "format": "{status_icon} {dynamic}",
      "format-paused": "{status_icon} <i>{dynamic}</i>",
      "player-icons": {
        "default": "‚ñ∂",
        "mpv": "üéµ",
        "firefox": "Û∞àπ"
      },
      "status-icons": {
        "playing": "‚è∏",
        "paused": "‚ñ∂"
      },
      "interval": 1,
      "dynamic-order": [
        "title",
        "artist",
        "position",
        "length"
      ],
      "title-len": 12,
      "artist-len": 12
    },
    "group/audio": {
      "orientation": "inherit",
      "modules": [
        "pulseaudio",
        "custom/microphone"
      ],
      "drawer": {
        "transition-duration": 200,
        "children-class": "audio",
        "transition-left-to-right": false
      }
    },
    "pulseaudio": {
      "format": "{icon}  {volume}%",
      "format-icons": {
        "default": [
          "ÔÄ¶",
          "ÔÄß",
          "ÔÄ®"
        ]
      },
      "format-muted": "Óª®  {volume}%",
      "on-click": "pavucontrol",
      "max-volume": 150,
      "on-click-right": "wpctl set-mute @DEFAULT_SINK@ toggle"
    },
    "custom/powermenu": {
      "format": "‚èª",
      "tooltip-format": "Power Menu",
      "on-click": "~/.config/rofi/bin/powermenu.sh"
    },
    "network": {
      "format-wifi": "{icon}",
      "format-icons": [
        "Û∞§ü",
        "Û∞§¢",
        "Û∞§•",
        "Û∞§®"
      ],
      "format-ethernet": "Óºâ  ",
      "tooltip-format": "{ipaddr}/{cidr} on {ifname} via {gwaddr}",
      "tooltip-format-wifi": "{essid} ({signalStrength}%)",
      "format-linked": "{ifname} (No IP) Ôûñ",
      "format-disconnected": "Disconnected Û∞ñ™",
      "on-click": "~/.config/rofi/applets/bin/network.sh"
    },
    "custom/microphone": {
      "exec": "~/repo/dotfiles/waybar/scripts/monitor_volume.sh",
      "format": "{icon} {text}",
      "return-type": "json",
      "on-click-right": "wpctl set-mute @DEFAULT_SOURCE@ toggle"
    },
    "custom/vpn": {
      "exec": "~/.config/waybar/scripts/mullvad_status.sh",
      "interval": 1,
      "return-type": "json",
      "on-click": "mullvad-vpn"
    },
    "hyprland/workspaces": {
      "all-outputs": true,
      "sort-by-name": false,
      "sort-by-coordinates": true
    },
    "hyprland/language": {
      "format": "Û∞åå {}",
      "format-en": "us",
      "format-pl": "pl",
      "on-click": "hyprctl switchxkblayout current next"
    },
    "group/cpu": {
      "orientation": "inherit",
      "modules": [
        "cpu",
        "temperature"
      ]
    },
    "group/usage": {
      "orientation": "inherit",
      "drawer": {
        "transition-duration": 200,
        "children-class": "usage",
        "transition-left-to-right": false
      },
      "modules": [
        "group/cpu",
        "memory",
        "disk"
      ]
    },
    "cpu": {
      "format": "Ôãõ  {usage}%",
      "interval": 1,
      "on-click": "ghostty -e btop --preset 1"
    },
    "memory": {
      "format": "ÓøÖ  {percentage}%",
      "tooltip-format": "{used}/{total} GB | {swapUsed}/{swapTotal} GB",
      "interval": 1
    },
    "disk": {
      "interval": 30,
      "format": "ÔÇ†  {percentage_used}%",
      "tooltip-format": " {used}/{total} GB",
      "path": "/"
    },
    "custom/nixos": {
      "format": "Û±ÑÖ",
      "tooltip": true,
      "tooltip-format": "btw"
    },
    "battery": {
      "interval": 60,
      "states": {
        "warning": 30,
        "critical": 15
      },
      "format": "{icon}  {capacity}%",
      "format-icons": [
        "ÔâÑ",
        "ÔâÉ",
        "ÔâÇ",
        "ÔâÅ",
        "ÔâÄ"
      ],
      "format-charging": "{capacity}% {icon}  (Û±êã)",
      "tooltip-format": "{timeTo}\nHealth: {health}%"
    },
    "temperature": {
      "thermal-zone": 6,
      "hwmon-path": "/sys/class/hwmon/hwmon1/temp1_input",
      "format": "({temperatureC}¬∞C)",
      "interval": 1
    },
    "bluetooth": {
      "format": "Û∞ÇØ",
      "format-disabled": "Û∞Ç≤",
      "format-connected": "Ôäì",
      "tooltip-format": "{controller_alias}\t{controller_address}",
      "tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{device_enumerate}",
      "tooltip-format-enumerate-connected": "{device_alias}\t{device_address}",
      "on-click": "blueberry"
    },
    "custom/brightness": {
      "orientation": "horizontal",
      "on-scroll-up": "~/.config/waybar/scripts/change_brightness.sh -i 5",
      "on-scroll-down": "~/.config/waybar/scripts/change_brightness.sh -d 5",
      "exec": "~/.config/waybar/scripts/brightness.sh",
      "on-click": "~/.config/waybar/scripts/toggle_night_mode.sh",
      "interval": 1,
      "return-type": "json",
      "smooth-scrolling-threshold": 1
    },
    "tray": {
      "spacing": 13
    }
  }
]
